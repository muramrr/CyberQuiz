<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
    android:background="@color/transparent_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
    <com.mmdev.cyberquiz.custom_design.Custom_TextView_AvenirNext_DemiBold
        android:id="@+id/tv_topText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREAT JOB!"
        android:textSize="20sp"
        android:textColor="@color/white_text"/>

    <com.mmdev.cyberquiz.custom_design.Custom_TextView_AvenirNext_DemiBold
        android:id="@+id/tv_topText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEEP GOING!"
        android:textSize="20sp"
        android:textColor="@color/white_text"/>
    </LinearLayout>

    <com.mmdev.cyberquiz.custom_design.Custom_TextView_AvenirNext_DemiBold
        android:id="@+id/revealed_answer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="That was hidden player"
        android:textSize="@dimen/dialog_true_revealed_answer"
        android:textColor="@color/yellow_light"/>

    <com.mmdev.cyberquiz.custom_design.Custom_TextView_AvenirNext_DemiBold
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="+1 hint"
        android:textSize="35sp"
        android:visibility="invisible"
        android:textColor="@color/white_text"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_Hints_icon"
        android:drawableLeft="@drawable/lamp_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
    <com.mmdev.cyberquiz.custom_design.Custom_Button_AvenirNext_Medium
        android:id="@+id/butDiag_nextImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="20sp"
        android:textColor="@color/white_text"
        android:background="@drawable/main_buttons"/>
    </LinearLayout>
</LinearLayout>