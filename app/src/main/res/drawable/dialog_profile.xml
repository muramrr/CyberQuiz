        <shape>
            <stroke android:width="1dp" android:color="#28c2c1" />
            <corners android:radius="15dp" />
            <solid android:color="#cfffffff" />
        </shape>
    </item>
    <item android:top="1dp" android:right="1dp" android:bottom="100dp"
